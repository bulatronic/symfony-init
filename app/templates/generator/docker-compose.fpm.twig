services:
  php:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: symfony-app
    restart: unless-stopped
    volumes:
      - .:/app
    working_dir: /app

  nginx:
    image: nginx:alpine
    container_name: symfony-nginx
    restart: unless-stopped
    ports:
      - "8000:80"
    volumes:
      - .:/app
      - ./nginx.conf:/etc/nginx/conf.d/default.conf:ro
    depends_on:
      - php
